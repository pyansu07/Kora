// Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

// Enable Prisma Client generation
generator client {
  provider = "prisma-client-js"
}

// Database connection configuration
datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Enum for user roles
enum Role {
  user
  assistant
}

// User model definition
model User {
  id        String   @id @default(cuid()) @map("_id") // MongoDB's default unique identifier
  clerkId   String   @unique              // Unique ID for authentication with Clerk
  email     String   @unique              // User email, must be unique
  name      String?                        // Optional name field
  avatar    String?                        // Optional avatar field
  
  createdAt DateTime @default(now())       // Automatically set creation timestamp
  updatedAt DateTime @updatedAt            // Automatically update timestamp on change
}
